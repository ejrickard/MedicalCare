<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LabTestBookActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Your existing UI elements -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/app_motto"
            android:fontFamily="@font/alegreya_bold"
            android:textColor="#F8F1F1"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle"
            android:textColor="#EDC54B"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            android:paddingBottom="18sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextLTBFullName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/editTextLTBContact"
            android:layout_width="361dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="24dp"
            android:autofillHints="PhoneNumber"
            android:background="@drawable/input_bg"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/contact"
            android:inputType="phone"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FBFAFA"
            android:textColorHint="#FBFAFA"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonLTBBook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextLTBAddress"
            android:layout_width="361dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="28dp"
            android:autofillHints="Email"
            android:background="@drawable/input_bg"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/address"
            android:fontFamily="@font/roboto_medium"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FBFAFA"
            android:textColorHint="#FBFAFA"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextLTBPinCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextLTBFullName"
            android:layout_width="361dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="28dp"
            android:autofillHints="FullName"
            android:background="@drawable/input_bg"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/fullName"
            android:fontFamily="@font/roboto_medium"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FBFAFA"
            android:textColorHint="#FBFAFA"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextLTBAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextLTBPinCode"
            android:layout_width="361dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="28dp"
            android:autofillHints="password"
            android:background="@drawable/input_bg"
            android:drawableStart="@drawable/ic_baseline_security_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/pinCode"
            android:fontFamily="@font/roboto_medium"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FBFAFA"
            android:textColorHint="#FBFAFA"
            android:textSize="26sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextLTBContact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.531"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonLTBBook"
            android:layout_width="125dp"
            android:layout_height="53dp"
            android:layout_marginBottom="152dp"
            android:background="@drawable/btn_bg"
            android:text="@string/book"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <!-- Add any additional views here -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
