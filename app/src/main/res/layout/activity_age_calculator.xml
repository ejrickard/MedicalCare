<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".AgeCalculatorActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="7dp"
        android:id="@+id/ci_item_id">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_margin="5dp"
            android:elevation="7dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/interest_linear"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvInterest"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:minWidth="90dp"
                    android:singleLine="true"
                    android:text="@string/ageOn"
                    android:textColor="@color/black"
                    android:textSize="23sp" />

                <EditText
                    android:id="@+id/etAgeDay"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:autofillHints="day"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/dd"
                    android:text="@string/dd"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/etAgeMonth"
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:autofillHints="month"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/mm"
                    android:text="@string/mm"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/etAgeYear"
                    android:layout_width="89dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:autofillHints="year"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/yy"
                    android:text="@string/yy"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:maxLength="4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/principal_linear"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_margin="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="57dp"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:minWidth="90dp"
                    android:singleLine="true"
                    android:text="@string/dob"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etBirthdayDay"
                    android:layout_width="70dp"
                    android:layout_height="67dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:autofillHints="day"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/dd"
                    android:text="@string/dd"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/etBirthdayMonth"
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:autofillHints="month"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/mm"
                    android:text="@string/mm"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/etBirthdayYear"
                    android:layout_width="80dp"
                    android:layout_height="67dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:autofillHints="year"
                    android:clickable="true"
                    android:focusable="true"
                    android:hint="@string/yy"
                    android:text="@string/yy"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:maxLength="4" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="307dp"
            android:layout_height="72dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="5dp"
            android:elevation="9dp"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:background="@drawable/linear_background"
            android:text="@string/cal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="337dp"
            android:layout_margin="5dp"
            android:elevation="7dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/year_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="wrap_content"
                    android:layout_height="73dp"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:minWidth="100dp"
                    android:singleLine="true"
                    android:text="@string/year"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etYear"
                    android:layout_width="183dp"
                    android:layout_height="88dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:autofillHints="year"
                    android:inputType="number"
                    android:textSize="23sp"
                    android:text="@string/zero"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/month_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:minWidth="100dp"
                    android:singleLine="true"
                    android:text="@string/month"
                    android:textColor="@color/black"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etMonth"
                    android:layout_width="187dp"
                    android:layout_height="83dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:autofillHints="month"
                    android:inputType="text"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:text="@string/zero"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tAmount_linear"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:minWidth="100dp"
                    android:singleLine="true"
                    android:text="@string/days"
                    android:textColor="@color/black"
                    android:textSize="23sp"


                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tvResult"
                    android:layout_width="190dp"
                    android:layout_height="85dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:autofillHints="days"
                    android:inputType="text"
                    android:textSize="23sp"
                    android:textColor="@color/black"
                    android:text="@string/zero"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


