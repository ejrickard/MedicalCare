<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_background"
    tools:context=".BuyMedicineBookActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Your existing UI elements -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="10dp"
            android:text="@string/app_motto"
            android:textColor="@color/deepYellow"
            android:fontFamily="@font/alegreya_bold"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewBMBPackageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/bookingDetails"
            android:textColor="@color/SkyBlue"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/editTextBMBContact"
            android:layout_width="361dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:autofillHints="PhoneNumber"
            android:background="@drawable/input_bg"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/contact"
            android:fontFamily="@font/roboto_medium"
            android:inputType="phone"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FBFAFA"
            android:textColorHint="#FBFAFA"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/editTextBMBPinCode"
            app:layout_constraintStart_toStartOf="@+id/editTextBMBPinCode"
            app:layout_constraintTop_toBottomOf="@+id/editTextBMBPinCode" />

        <EditText
            android:id="@+id/editTextBMBAddress"
            android:layout_width="361dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:autofillHints="Email"
            android:background="@drawable/input_bg"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/address"
            android:fontFamily="@font/roboto_medium"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FBFAFA"
            android:textColorHint="#FBFAFA"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/editTextBMBFullName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextBMBFullName"
            app:layout_constraintTop_toBottomOf="@+id/editTextBMBFullName" />

        <EditText
            android:id="@+id/editTextBMBFullName"
            android:layout_width="361dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:autofillHints="FullName"
            android:background="@drawable/input_bg"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/fullName"
            android:fontFamily="@font/roboto_medium"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FBFAFA"
            android:textColorHint="#FBFAFA"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/textViewBMBPackageName"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textViewBMBPackageName"
            app:layout_constraintTop_toBottomOf="@+id/textViewBMBPackageName" />

        <EditText
            android:id="@+id/editTextBMBPinCode"
            android:layout_width="361dp"
            android:layout_height="53dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:autofillHints="password"
            android:background="@drawable/input_bg"
            android:drawableStart="@drawable/ic_baseline_security_24"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="@string/pinCode"
            android:fontFamily="@font/roboto_medium"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:textColor="#FBFAFA"
            android:textColorHint="#FBFAFA"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="@+id/editTextBMBAddress"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="@+id/editTextBMBAddress"
            app:layout_constraintTop_toBottomOf="@+id/editTextBMBAddress" />

        <Button
            android:id="@+id/buttonBMBBook"
            android:layout_width="125dp"
            android:layout_height="53dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="190dp"
            android:background="@drawable/btn_bg"
            android:text="@string/book"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/editTextBMBContact"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintStart_toStartOf="@+id/editTextBMBContact"
            app:layout_constraintTop_toBottomOf="@+id/editTextBMBContact"
            app:layout_constraintVertical_bias="1.0" />
        <!-- Add any additional views here -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
